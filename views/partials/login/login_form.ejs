<div class="flex justify-center self-center  z-10">
  <div class="p-12 bg-white mx-auto rounded-2xl w-100 ">
    <div class="mb-4">
      <h3 class="text-green-500 font-semibold text-2xl"> <%- locals.constants.loginPagePhrases.LOGIN_BOX_HEADING %> </h3>
      <p class="text-gray-500 text-sm mt-1"> <%- locals.constants.loginPagePhrases.LOGIN_BOX_SUB_HEADING %> </p>
    </div>
    <div class="space-y-5">
      <div class="space-y-2">
        <label class="text-sm font-medium text-gray-700 tracking-wide"> <%- locals.constants.loginPagePhrases.EMAIL_FIELD_LABEL %> </label>
        <input class=" w-full text-sm px-4 py-2 border  border-gray-300 rounded-lg focus:outline-none focus:border-green-400" type="" placeholder="<%- locals.constants.loginPagePhrases.EMAIL_FIELD_PLACEHOLDER %>">
      </div>
      <div class="space-y-2">
        <label class="mb-5 text-sm font-medium text-gray-700 tracking-wide"> <%- locals.constants.loginPagePhrases.PASSWORD_FIELD_LABEL %> </label>
        <input class="w-full content-center text-sm px-4 py-2 border  border-gray-300 rounded-lg focus:outline-none focus:border-green-400" type="" placeholder="<%- locals.constants.loginPagePhrases.PASSWORD_FIELD_PLACEHOLDER %>">
      </div>
      <div class="flex items-center justify-between">
        <div class="flex items-center">
          <!-- <input id="remember_me" name="remember_me" type="checkbox" class="h-4 w-4 bg-blue-500 focus:ring-blue-400 border-gray-300 rounded"> -->
          <!-- <label for="remember_me" class="ml-2 block text-sm text-gray-800"> <%- locals.constants.loginPagePhrases.REMEMBER_ME_LABEL %> </label> -->
        </div>
        <div class="text-sm">
          <a href="#" class="text-green-400 hover:text-green-500"><%- locals.constants.loginPagePhrases.FORGET_PASSWORD_LABEL %></a>
        </div>
      </div>
      <div>
        <button type="submit" class="w-full flex justify-center bg-green-400  hover:bg-green-500 text-gray-100 p-3  rounded-lg tracking-wide font-semibold  shadow-lg cursor-pointer transition ease-in duration-500">
          <%- locals.constants.loginPagePhrases.SIGN_IN_BUTTON_LABEL %>
        </button>
      </div>
      <div>
        <p class="text-gray-500 text-sm mt-2">
          <%- locals.constants.loginPagePhrases.CREATE_ACCOUNT_LABEL_1 %> 
          <a href="<%- locals.constants.DEV_GITHUB_PROFILE %>" rel="" target="_blank" title="" class="text-green text-green-500 "> <%- locals.constants.loginPagePhrases.CREATE_ACCOUNT_LABEL_2 %> </a> 
          <%- locals.constants.loginPagePhrases.CREATE_ACCOUNT_LABEL_3 %> </p>
      </div>
    </div>
    <div class="pt-5 text-center text-gray-400 text-xs">
      <span>
        <%- locals.constants.generalInfo.COPY_RIGHT_TEXT %>
        <a href="<%- locals.constants.generalInfo.DEV_GITHUB_PROFILE %>" rel="" target="_blank" title="" class="text-green hover:text-green-500 "> <%- locals.constants.generalInfo.DEV_USERNAME %> </a>
      </span>
    </div>
  </div>
</div>

